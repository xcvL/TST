{
    "manifest_version" : 3,
    "name" : "text selection translator",
    "version" : "1.0",
    "description" : "Automatically translates text when you drag and select it.",
    "icons" : {
        "16" : "icons/icon16.png",
        "48" : "icons/icon48.png",
        "128" : "icons/icon128.png"
    },
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js" : ["index.js"]
        }
    ]
}